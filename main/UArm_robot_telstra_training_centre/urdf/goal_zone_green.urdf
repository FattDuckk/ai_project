<?xml version="1.0" ?>
<robot name="goal_zone">
  <link name="base">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.12 0.12 0.001"/>
      </geometry>
      <material name="goal_color">
        <color rgba="0 1 0 0.4"/> <!-- green + transparent -->
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0 0 0"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="1e-5" iyy="1e-5" izz="1e-5"/>
    </inertial>
  </link>
</robot>
